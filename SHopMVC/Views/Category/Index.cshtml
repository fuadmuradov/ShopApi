@model CategoryListDto
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Categories</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="mb-3">
                <a href="#"><button class="btn btn-outline-success">Add new Category</button></a>
            </div>
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Image Name</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Image</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="#"><button class="btn btn-outline-danger ml-2">Delete</button></a>
                                <a href="#"><button class="btn btn-outline-warning">Edit</button></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>

